{
  "name": "express-ts-wizard",
  "version": "0.1.6",
  "description": "Create production-ready Express.js + TypeScript projects in seconds. Interactive CLI with 3 strictness levels, hot-reload, graceful shutdown, and Express 5.0",
  "type": "module",
  "bin": {
    "express-ts-wizard": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc && npm run copy-templates",
    "copy-templates": "cp -r src/templates dist/",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "prepublishOnly": "npm run build",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "keywords": [
    "express",
    "expressjs",
    "express5",
    "typescript",
    "ts",
    "cli",
    "generator",
    "scaffold",
    "scaffolding",
    "create",
    "init",
    "boilerplate",
    "starter",
    "template",
    "nodejs",
    "node",
    "api",
    "rest",
    "restful",
    "backend",
    "server",
    "web",
    "wizard",
    "interactive",
    "create-express",
    "express-generator",
    "express-typescript",
    "express-ts",
    "tsconfig",
    "strict",
    "hot-reload",
    "tsx"
  ],
  "author": {
    "name": "Simon Oyaneder",
    "url": "https://github.com/SimonOyaneder"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SimonOyaneder/express-ts-wizard.git"
  },
  "bugs": {
    "url": "https://github.com/SimonOyaneder/express-ts-wizard/issues"
  },
  "homepage": "https://github.com/SimonOyaneder/express-ts-wizard#readme",
  "dependencies": {
    "@clack/prompts": "^0.8.2",
    "execa": "^9.5.2",
    "fs-extra": "^11.2.0",
    "kleur": "^4.1.5"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
